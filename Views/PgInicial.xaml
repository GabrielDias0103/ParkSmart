<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="parkSmart.Views.PgInicial"
             Title="ParkSmart"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             Spacing="25"
                             VerticalOptions="CenterAndExpand"
                             HorizontalOptions="Center">

            <Label Text="Bem-vindo ao ParkSmart"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#0E99FF"
                   HorizontalOptions="Center"
                   Margin="0,50,0,0"/>

            <Image Source="pginiciall.png"
                   HeightRequest="600"
                   WidthRequest="400"
                   HorizontalOptions="Center"/>

            <Button Text="☰ Serviços"
                    FontSize="18"
                    BackgroundColor="#0E99FF"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    Clicked="btnMenu_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
