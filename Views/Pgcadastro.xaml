<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="parkSmart.Views.Pgcadastro"
             Title="Pgcadastro">
    <ScrollView>
        <StackLayout Padding="10">
            <Entry x:Name="Placa" Placeholder="Placa" />
            <Entry x:Name="Marca" Placeholder="Marca" />
            <Entry x:Name="Modelo" Placeholder="Modelo" />
            <Entry x:Name="Cor" Placeholder="Cor" />
            <Entry x:Name="NomeProprietario" Placeholder="Nome do ProprietÃ¡rio" />
            <Picker x:Name="TipoPicker" Title="Tipo">
                <Picker.Items>
                    <x:String>Mensalista</x:String>
                    <x:String>Diario</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Selecionar Foto" Clicked="btnSelecionarFoto_Clicked" />
            <Image x:Name="FotoImage" HeightRequest="200" />
            <Button Text="Salvar" Clicked="btnSalvar_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>